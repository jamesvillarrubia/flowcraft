{
  "ciProvider": "github",
  "mergeStrategy": "fast-forward",
  "requireConventionalCommits": true,
  "initialBranch": "develop",
  "finalBranch": "main",
  "branchFlow": [
    "develop",
    "staging",
    "main"
  ],
  "domains": {
    "api": {
      "path": "api"
    }
  },
  "rebuild": {
    "enabled": true,
    "skipIfUnchanged": true,
    "forceRegenerate": false,
    "watchMode": false,
    "hashAlgorithm": "sha256",
    "cacheFile": ".flowcraft-cache.json",
    "ignorePatterns": []
  }
}